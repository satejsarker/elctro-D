


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-content">
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>SL</th>
                                        <th>Title</th>
                                        <th>Approve</th>
                                        <th class="disabled-sorting">Details</th>
                                        <th>Reporter</th>
                                        <th>Date &amp; Time</th>
                                        <th class="disabled-sorting text-right">Actions</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>SL</th>
                                        <th>Title</th>
                                        <th class="disabled-sorting">Details</th>
                                        <th>Reporter</th>
                                        <th>Date &amp; Time</th>
                                        <th class="text-right">Actions</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    {{#each news}}
                                     
                                    {{#ifCond this.draft "===" 1}}
                                   {{#ifCond  ../user.id '==='this.user_id}}
                                    <tr>
                                        <td>{{ this.id}}</td>
                                        <td>{{this.headline}}</td>
                                        <td>{{#if this.active}}
                                            <i class="material-icons" style="color: green">radio_button_checked</i>
                                            {{/if}}
                                        </td>
                                        <td><a href="https://www.dbcnews.tv/paper/8766" target="_blank"><button type="button" class="btn btn-default" ><i class="material-icons">link</i></button></td></a>
                                        <td>{{ this.username }}</td>
                                        <td>{{formatDate   this.created_at 'long'}}</td>
                                       {{!-- <td>{{moment date=this.created_at  local=true }}</td>   --}}
                                       
                                        <td class="text-right">
                                            <a href="/news-update/{{this.id}}" class="btn btn-simple btn-info btn-icon like">
                                                <i class="material-icons">border_color</i>
                                            </a>
                                            {{#ifCond  ../user.id '==='this.user_id}}
                                            <a href="/notdraft/{{this.id}}" class="btn btn-simple btn-danger btn-icon check">
                                                <i class="material-icons" style="color:green">check</i>
                                            </a>
                                             {{!-- <a href="/disactivate/{{this.id}}" class="btn btn-simple btn-danger btn-icon check"> --}}
                                              {{!-- <i class="material-icons">indeterminate_check_box</i> --}}
                                              <a href="/delete/{{this.id}}"  title="Be careful!!!" class="btn btn-simple btn-danger btn-icon remove">
                                                <i class="material-icons">close</i>                                                
                                            </a>
                                            </a>
                                            {{/ifCond}}
                                            
                                        </td>
                                    </tr>
                                    {{/ifCond}}
                                      {{/ifCond}}
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</div>